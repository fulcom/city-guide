  <div class="mt-3 row justify-content-center">
    <div class="col-4">
      <h4>Edit this booking: <%= booking.trip_name %></h4>
      <%= simple_form_for [ @trip, @booking] do |f| %>
        <%= f.input :start_date, placeholder: "Start Date" %>
        <%= f.input :end_date, placeholder: "End Date" %>
        <%= f.submit "Edit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
