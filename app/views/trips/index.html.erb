<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1531210483974-4f8c1f33fd35?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2700&q=80');">
  <div class="text-in-banner">
    <h1 class="mb-2">Que voulez-vous faire ?</h1>
    <h2 id="h2-index" class="mb-2">Découvrez votre ville</h2>
    <div class="banner-flex">
      <div class="searchbar">
        <%= form_tag trips_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Trouver un Treep"
        %>
      </div>
      <div class="pr-1 pl-0 justify-content-center">
        <%= submit_tag "Chercher", class: "btn btn-flat-green" %>
      </div>
      <div class="pl-2">
        <%= link_to "Créer un treep", new_trip_path, class: "btn btn-flat-violet" %>
      </div>
      <% end %>
      <!-- <div class="">
      </div> -->
    </div>
  </div>
</div>

<div class="container container-trip">
<!--   <h2 class="m-3 text-center">List des treeps</h2>
 -->  <div class="d-flex pos-photo">
    <div class="container col-6">
      <h2 class="m-3">Liste des treeps</h2>
      <% @trips.each do |trip| %>
        <div class="card-text m-10">
          <div class="card-text m-10">
            <%= cl_image_tag trip.photo %>
            <div class="card-text-infos">
              <h2><%= link_to trip.name, trip_path(trip) %></h2>
              <p><%= trip.description.first(100) %>[...]</p>
            </div>
          </div>
        </div>
      <%end%>
    </div>
<!-- Alice -->
      <!-- <div class="container col-6 resize-img mt-5" style="background-image: url(<%#= image_path 'map.png' %>)"> -->
      <div
        id="map", style="width: 100%;, height: 600px;", data-markers="<%= @markers.to_json %>", data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
<!-- Alice -->
  </div>
</div>




