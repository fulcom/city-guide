
<div class="container">
  <div class="col-6 offset-6">

    <h1><%= @trip.name %></h1>

    <h2><%= @booking.start_date %><%= @booking.end_date %></h2>
    <h2><%= @trip.description %></h2>
    <p>Trip description</p>

    <p>blabla</p>

    <p>TimeTable</p>

    <%= link_to "Back to all trips", root_path %>
  </div>
  <div class="col-6 offset-6">
    <%= simple_form_for @booking do |f| %>
      <div class="form-inputs">
          <%= f.input :start_date,
                  required: false,
                  autofocus: true %>
          <%= f.input :end_date,
                  required: false %>
          <%= f.input :city,
                  required: false %>
      </div>
      <div class="form-actions">
          <%= f.button :submit, "Submit the booking"  %>
          <%= link_to 'Back', trip_booking_path %>
        </div>
      <% end %>
    </div>
  </div>
