<h1></h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :name,
                required: false,
                autofocus: true %>
    <%= f.input :city,
                required: false %>

    <%= f.input :description,
                required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit the trip" %>
  </div>
<% end %>

<%= render "new" %>
